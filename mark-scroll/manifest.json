{
  "manifest_version": 2,
  "name": "Mark Scroll",
  "version": "1.0.0",
  "description": "Mark scroll positions in the page to return to them later",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/content/content.js"]
		}
	],
  "background": {
    "page": "src/background/background.html",
    "persistent": true
  },
	"sidebar_action": {
		"default_title": "Marks",
		"default_panel": "src/sidebar/sidebar.html",
		"default_icon": "icons/icon.svg",
		"open_at_install": false
	},
  "permissions": [
    "storage",
    "menus",
    "activeTab"
  ]
}
