{
  "manifest_version": 2,
  "name": "Highlight Selection",
  "version": "1.0.0",
  "description": "Highlight selected text",
  "icons": {
    "48": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/bundle/main.js"
      ]
    }
  ],
  "options_ui": {
    "page": "src/options.html"
  },
  "background": {
    "page": "src/background.html",
    "persistent": false
  },
  "permissions": [
    "storage"
  ]
}